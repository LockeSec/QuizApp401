<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".ProfileActivity">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Tap on camera to choose profile picture"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/login_form"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/change_profile_pic_imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="55dp"
            android:scaleType="centerCrop"
            android:background="@drawable/camera3"
            />
        
        <ProgressBar
            android:id="@+id/profile_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/display_name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter display name"
        android:textColorHint="@color/login_form"
        android:textColor="@color/login_form"
        android:padding="12dp"
        />

    <Button
        android:id="@+id/save_profile_button"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Save"
        android:textAllCaps="false"
        android:background="@drawable/button_bg"
        />

    <Button
        android:id="@+id/cancel_save_button"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:background="@drawable/button_bg"
        />

</LinearLayout>