<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_form_medium" />

    <TableRow>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/cellSeperatorHeight"
            android:background="@color/login_form_medium"
            />

        <ImageView
            android:id="@+id/leaderboard_profile_pic"
            android:layout_width="200dp"
            android:layout_height="@dimen/cellImageSize"
            android:layout_gravity="center"
            android:layout_weight="2"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/cellSeperatorHeight"
            android:background="@color/login_form_medium"
            />

        <TextView
            android:id="@+id/list_view_textView1"
            android:layout_width="@dimen/cellWidth"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="TextView 1"
            android:textColor="@color/login_form"
            android:textSize="@dimen/cellTextSize"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/cellSeperatorHeight"
            android:background="@color/login_form_medium"
            />

        <TextView
            android:id="@+id/list_view_textView2"
            android:layout_width="@dimen/cellWidth"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="TextView 2"
            android:textColor="@color/login_form"
            android:textSize="@dimen/cellTextSize"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/cellSeperatorHeight"
            android:background="@color/login_form_medium"
            />

    </TableRow>

</TableLayout>
