<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_quizapp_logo_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz App"
        android:textColor="@color/login_form"
        android:textSize="100sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/lobster"
        />

    <TextView
        android:id="@+id/highScore_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score: 0"
        android:textSize="@dimen/headerSize"
        android:textColor="@color/login_form"
        android:layout_marginBottom="34dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/start_button"
        android:fontFamily="@font/lobster"
        />

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/login_form"
        android:layout_centerInParent="true"
        android:background="@drawable/button_bg"

        />

    <TextView
        android:id="@+id/category_spinner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_button"
        android:text="Category"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/login_form"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_button"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/difficulty_spinner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_spinner"
        android:text="Difficulty"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/login_form"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        />

    <Spinner
        android:id="@+id/difficulty_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_spinner"
        android:layout_marginTop="70dp"
        >
    </Spinner>

    <ImageView
        android:id="@+id/temp_image_view"
        android:layout_width="500dp"
        android:layout_height="500dp"
        />

</RelativeLayout>

